# Database Connection String
# Replace with your actual database connection details
# Format: postgresql://user:password@host:port/database?schema=public

# For Docker Compose (default):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mydb?schema=public"

# For other database providers:
# MySQL: mysql://user:password@localhost:3306/mydb
# SQLite: file:./dev.db
# MongoDB: mongodb://user:password@localhost:27017/mydb

# Better Auth Configuration
# Generate a secret with: openssl rand -base64 32
# Must be at least 32 characters long
BETTER_AUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# Base URL of your application
# For local development: http://localhost:3000
# For production: https://yourdomain.com
BETTER_AUTH_URL="http://localhost:3000"

# Notion OAuth Integration
# Create an integration at: https://www.notion.so/my-integrations
# Set redirect URI to: http://localhost:3000/api/integrations/notion/callback
NOTION_CLIENT_ID="your-notion-oauth-client-id"
NOTION_CLIENT_SECRET="your-notion-oauth-client-secret"
NOTION_REDIRECT_URI="http://localhost:3000/api/integrations/notion/callback"

# For client-side (add to .env.local as well)
NEXT_PUBLIC_NOTION_CLIENT_ID="your-notion-oauth-client-id"
NEXT_PUBLIC_NOTION_REDIRECT_URI="http://localhost:3000/api/integrations/notion/callback"

# Legacy Notion API Key (optional, for system-wide sync)
# NOTION_API_KEY="secret_your_integration_token_here"
# NOTION_DATABASE_ID="your_database_id_here"
