# Database Connection String
# Replace with your actual database connection details
# Format: postgresql://user:password@host:port/database?schema=public

# For Docker Compose (default):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mydb?schema=public"

# For other database providers:
# MySQL: mysql://user:password@localhost:3306/mydb
# SQLite: file:./dev.db
# MongoDB: mongodb://user:password@localhost:27017/mydb

# Better Auth Configuration
# Generate a secret with: openssl rand -base64 32
# Must be at least 32 characters long
BETTER_AUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# Base URL of your application
# For local development: http://localhost:3000
# For production: https://yourdomain.com
BETTER_AUTH_URL="http://localhost:3000"

# Algolia Configuration
# Get these from your Algolia dashboard: https://www.algolia.com/
# Note: NEXT_PUBLIC_ prefix is required for client-side access
# ALGOLIA_ADMIN_API_KEY is used for server-side sync operations (write access)
# NEXT_PUBLIC_ALGOLIA_API_KEY is used for client-side search (read-only)
ALGOLIA_APPLICATION_ID="your-algolia-application-id"
ALGOLIA_ADMIN_API_KEY="your-algolia-admin-api-key"
NEXT_PUBLIC_ALGOLIA_APPLICATION_ID="your-algolia-application-id"
NEXT_PUBLIC_ALGOLIA_API_KEY="your-algolia-search-only-api-key"
NEXT_PUBLIC_ALGOLIA_CONTACTS_INDEX="contacts"
ALGOLIA_CONTACTS_INDEX="contacts"

# Notion Configuration
# Get these from your Notion workspace integrations: https://www.notion.so/my-integrations
# NOTION_API_KEY: Create an integration at https://www.notion.so/my-integrations and copy the "Internal Integration Token"
# NOTION_DATABASE_ID: Found in your Notion database URL (the long alphanumeric string after the last slash)
# Example URL: https://www.notion.so/workspace/DATABASE_ID?v=...
# Both variables are required for syncing contacts from Notion
NOTION_API_KEY="your-notion-api-key"
NOTION_DATABASE_ID="your-notion-database-id"

# AI SDK Configuration
# AI_PROVIDER: Choose between "openai", "anthropic", "google"/"gemini", or "kimi" (default: "openai")
# For OpenAI: Get your API key from https://platform.openai.com/api-keys
# For Anthropic: Get your API key from https://console.anthropic.com/
# For Google/Gemini: Get your API key from https://aistudio.google.com/app/apikey
# For Kimi: Custom OpenAI-compatible API endpoint (default base URL: https://ark.ap-southeast.bytepluses.com/api/v3)
AI_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_GENERATIVE_AI_API_KEY="your-google-gemini-api-key"
KIMI_API_KEY="your-kimi-api-key"
KIMI_BASE_URL="https://ark.ap-southeast.bytepluses.com/api/v3"
KIMI_MODEL="kimi-k2-thinking-251104"

# Firecrawl Configuration
# Get your API key from https://firecrawl.dev/
# Firecrawl is used to fetch and scrape web content for AI chat context
FIRECRAWL_API_KEY="your-firecrawl-api-key"